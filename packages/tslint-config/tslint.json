{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-implicit-dependencies": [true, "dev"],
    "object-literal-sort-keys": false,
    "prettier": {
      "severity": "error",
      "options": {
        "bracketSpacing": true,
        "printWidth": 100,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    },
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
