{
  "search.exclude": {
    ".cache": true,
    ".jest_cache": true,
    "**/dist": true,
    "**/lib": true,
    "**/node_modules": true,
  },
  "editor.formatOnSave": false,
  "eslint.autoFixOnSave": true,
  /** @see https://github.com/Microsoft/vscode-eslint/issues/284#issuecomment-325913370 */
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.enable": true
}
