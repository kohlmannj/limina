{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/prepare.js",
    "clean": "yarn clean:lib && yarn clean:cache && yarn clean:node_modules",
    "clean:cache": "rimraf .cache",
    "clean:lib": "rimraf packages/*/lib",
    "clean:node_modules": "rimraf node_modules packages/*/node_modules",
    "dev": "concurrently --kill-others \"yarn dev:ts\" \"yarn dev:js\"",
    "dev:js": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/watch-js.js",
    "dev:ts": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/watch-ts.js",
    "lint": "yarn lint:js . && yarn lint:ts && yarn lint:md .",
    "lint:fix": "yarn lint:js --fix . && yarn lint:ts --fix && yarn lint:md . -qfo",
    "lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.json --report-unused-disable-directives",
    "lint:ts": "tslint -p . -c tslint.json -t stylish",
    "lint:style": "stylelint",
    "lint:md": "remark -qf",
    "precommit": "lint-staged",
    "prerelease": "yarn test && yarn type-check",
    "release": "lerna publish",
    "storybook": "start-storybook -p 4001",
    "storybook:deploy": "storybook-to-ghpages",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 8.11",
    "yarn": ">= 1.7.0"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json}": [
        "yarn lint:js --fix",
        "prettier --write",
        "git add"
      ],
      "*.{ts,tsx}": [
        "yarn lint:ts --fix",
        "prettier --write",
        "git add"
      ],
      "*.{js,jsx,ts,tsx}": [
        "yarn lint:style",
        "git add"
      ],
      "*.md": [
        "yarn lint:md",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.52",
    "@babel/core": "^7.0.0-beta.52",
    "@babel/preset-env": "^7.0.0-beta.52",
    "@babel/preset-react": "^7.0.0-beta.52",
    "@babel/preset-typescript": "^7.0.0-beta.52",
    "@babel/register": "^7.0.0-beta.52",
    "@storybook/addon-info": "^4.0.0-alpha.12",
    "@storybook/addon-knobs": "^4.0.0-alpha.12",
    "@storybook/addons": "^4.0.0-alpha.12",
    "@storybook/react": "^4.0.0-alpha.12",
    "@storybook/storybook-deployer": "^2.3.0",
    "@types/enzyme": "^3.1.11",
    "@types/jest": "^23.1.4",
    "@types/react": "^16.4.6",
    "@types/react-test-renderer": "^16.0.1",
    "@types/storybook__addon-info": "^3.2.3",
    "@types/storybook__addon-knobs": "^3.3.1",
    "@types/storybook__react": "^3.0.8",
    "babel-7-jest": "^21.3.3",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.2.0",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-emotion": "^9.2.5",
    "chalk": "^2.4.1",
    "concurrently": "^3.6.0",
    "cross-env": "^5.2.0",
    "emotion": "^9.2.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "jest-emotion": "^9.2.5",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "markdown-loader-jest": "^0.1.1",
    "mdn-data": "^1.1.4",
    "npmlog": "^4.1.2",
    "prettier": "^1.13.7",
    "react": "^16.4.1",
    "react-docgen-typescript-loader": "^2.1.1",
    "react-dom": "^16.4.1",
    "remark": "^9.0.0",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.2",
    "typescript": "^2.9.2",
    "webpack": "^4.15.1",
    "webpack-merge": "^4.1.3"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
