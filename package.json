{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/prepare.js",
    "clean": "yarn clean:lib && yarn clean:cache && yarn clean:node_modules",
    "clean:cache": "rimraf .cache",
    "clean:lib": "rimraf packages/*/lib",
    "clean:node_modules": "rimraf node_modules packages/*/node_modules",
    "dev": "concurrently --kill-others \"yarn dev:ts\" \"yarn dev:js\"",
    "dev:js": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/watch-js.js",
    "dev:ts": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/watch-ts.js",
    "lint": "yarn lint:js . && yarn lint:ts && yarn lint:md .",
    "lint:fix": "yarn lint:js --fix . && yarn lint:ts --fix && yarn lint:md . -qfo",
    "lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.json --report-unused-disable-directives",
    "lint:ts": "tslint -p . -c tslint.json -t stylish",
    "lint:style": "stylelint",
    "lint:md": "remark -qf",
    "precommit": "lint-staged",
    "prerelease": "yarn test && yarn type-check",
    "release": "lerna publish",
    "storybook": "start-storybook -p 4001",
    "storybook:deploy": "storybook-to-ghpages",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 8.11",
    "yarn": ">= 1.7.0"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,json}": [
        "yarn lint:js --fix",
        "git add"
      ],
      "*.{ts,tsx}": [
        "yarn lint:ts --fix",
        "git add"
      ],
      "*.{js,jsx,ts,tsx}": [
        "yarn lint:style",
        "git add"
      ],
      "*.md": [
        "yarn lint:md",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-do-expressions": "^7.2.0",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-sent": "^7.2.0",
    "@babel/plugin-proposal-json-strings": "^7.2.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.2.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.2.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.3.0",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-syntax-import-meta": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@storybook/addon-info": "^4.1.11",
    "@storybook/addon-knobs": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "@storybook/storybook-deployer": "^2.8.1",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.13",
    "@types/react": "^16.7.21",
    "@types/react-test-renderer": "^16.0.3",
    "@types/storybook__addon-info": "^3.4.2",
    "@types/storybook__addon-knobs": "^4.0.0",
    "@types/storybook__react": "^4.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-emotion": "^9.2.11",
    "chalk": "^2.4.2",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "emotion": "^9.2.12",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-emotion": "^9.2.11",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.0",
    "markdown-loader-jest": "^0.1.1",
    "mdn-data": "^2.0.1",
    "npmlog": "^4.1.2",
    "prettier": "^1.16.1",
    "react": "^16.7.0",
    "react-docgen-typescript-loader": "^3.0.1",
    "react-dom": "^16.7.0",
    "remark": "^10.0.1",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-recommended": "^3.0.2",
    "rimraf": "^2.6.3",
    "shelljs": "^0.8.3",
    "stylelint": "^9.10.1",
    "typescript": "^3.2.4",
    "webpack": "^4.29.0",
    "webpack-merge": "^4.2.1"
  }
}
